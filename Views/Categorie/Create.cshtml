@model ecommerce.Models.ViewModels.AddCategorieViewModel

@{
  ViewData["Title"] = "Créer une catégorie";
}


<div class="container mx-auto px-4 py-8 flex-grow">
  <div class="max-w-3xl mx-auto">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-bold text-gray-800">
        Créer une nouvelle catégorie
      </h2>
      <a href="#" class="text-primary hover:text-primary/80 flex items-center">
        <i class="ri-arrow-left-line ri-lg mr-1"></i>
        <span>Retour</span>
      </a>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-6">
      <form asp-action="Create" method="post">
        <div class="space-y-6">
          <div>
            <label for="nom" class="block text-sm font-medium text-gray-700 mb-1">Nom de la catégorie</label>
            <input type="text" id="nom" asp-for="Nom"
              class="w-full px-4 py-3 border border-gray-300 rounded text-gray-800 placeholder-gray-400 transition-all focus:border-primary"
              placeholder="Entrez le nom de la catégorie" required />
            <p class="mt-1 text-sm text-gray-500">
              Le nom doit être unique et descriptif.
            </p>
          </div>
          <div>
            <label for="description" class="block text-sm font-medium text-gray-700 mb-1">Description
              (optionnel)</label>
            <textarea id="description" @* name="Description" *@
               rows="3"
              class="w-full px-4 py-3 border border-gray-300 rounded text-gray-800 placeholder-gray-400 transition-all focus:border-primary focus:outline-none"
              placeholder="Décrivez brièvement cette catégorie"></textarea>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Statut</label>
            <div class="flex items-center space-x-4">
              <div class="flex items-center">
                <div class="relative flex items-center">
                  <input type="checkbox" id="active" class="sr-only peer" checked />
                  <div
                    class="w-11 h-6 bg-gray-200 rounded-full peer peer-checked:bg-primary transition-all peer-checked:after:translate-x-5 after:content-[''] after:absolute after:top-0.5 after:left-0.5 after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all">
                  </div>
                </div>
                <label for="active" class="ml-2 text-sm text-gray-700">Actif</label>
              </div>
              <div class="flex items-center">
                <input type="checkbox" id="featured" class="hidden peer" />
                <label for="featured"
                  class="relative inline-flex items-center justify-center w-5 h-5 border border-gray-300 rounded peer-checked:bg-primary peer-checked:border-primary cursor-pointer">
                  <i class="ri-check-line ri-sm text-white opacity-0 peer-checked:opacity-100"></i>
                </label>
                <label for="featured" class="ml-2 text-sm text-gray-700 cursor-pointer">Mis en avant</label>
              </div>
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Couleur (optionnel)</label>
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 rounded-full bg-blue-500 cursor-pointer ring-2 ring-offset-2 ring-blue-500"></div>
              <div class="w-8 h-8 rounded-full bg-green-500 cursor-pointer"></div>
              <div class="w-8 h-8 rounded-full bg-yellow-500 cursor-pointer"></div>
              <div class="w-8 h-8 rounded-full bg-red-500 cursor-pointer"></div>
              <div class="w-8 h-8 rounded-full bg-purple-500 cursor-pointer"></div>
              <div class="w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center cursor-pointer">
                <i class="ri-add-line ri-sm text-gray-600"></i>
              </div>
            </div>
          </div>

          <div class="pt-4 flex items-center justify-end space-x-3">
            <a asp-action="Index"
              class="px-5 py-2.5 border border-gray-300 rounded-button text-gray-700 font-medium hover:bg-gray-50 transition-colors whitespace-nowrap">Annuler
            </a>
            <button type="submit"
              class="px-5 py-2.5 bg-primary text-white font-medium rounded-button hover:bg-primary/90 transition-colors flex items-center whitespace-nowrap">
              <i class="ri-save-line ri-lg mr-1.5"></i>
              Créer la catégorie
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
