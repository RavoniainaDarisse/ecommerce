@model IEnumerable<ecommerce.Models.Domain.Categorie>

@{
    ViewData["Title"] = "Liste des catégories";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Ajouter une catégorie</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categorie in Model)
        {
            <tr>
                <td>@categorie.Nom</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@categorie.Id" class="btn btn-sm btn-warning">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@categorie.Id" class="btn btn-sm btn-danger">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
