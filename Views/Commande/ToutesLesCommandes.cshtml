@model List<ecommerce.Models.Domain.Commande>

<h2>Toutes les commandes</h2>

<table class="table">
    <thead>
        <tr>
            <th>Client</th>
            <th>Date</th>
            <th>Statut</th>
            <th>Total</th>
            <th>Détails</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var commande in Model)
    {
        <tr>
            <td>@commande.Utilisateur?.Nom ?? "Inconnu"</td>
            <td>@commande.DateCommande.ToString("dd/MM/yyyy HH:mm")</td>
            <td>@commande.Statut</td>
            <td>@commande.Total.ToString("C")</td>
            <td>
                <ul>
                    @foreach(var item in commande.CommandeItems)
                    {
                        <li>@item.Produit.Nom - Qté : @item.Quantite - Prix unitaire : @item.PrixUnitaire.ToString("C")</li>
                    }
                </ul>
            </td>
        </tr>
    }
    </tbody>
</table>
