@model List<ecommerce.Models.Domain.PanierItem>



 <main class="container mx-auto px-4 py-8">
        <div class="max-w-5xl mx-auto">
          <h1 class="text-3xl font-semibold text-gray-800 mb-8">Mon Panier</h1>

          <div
            class="bg-white rounded-lg shadow-sm border border-gray-100 overflow-hidden"
          >
            <div class="overflow-x-auto">
              <table class="w-full">
                <thead class="bg-gray-50">
                  <tr>
                    <th
                      class="px-6 py-4 text-left text-sm font-medium text-gray-700 uppercase tracking-wider"
                    >
                      Produit
                    </th>
                    <th
                      class="px-6 py-4 text-left text-sm font-medium text-gray-700 uppercase tracking-wider"
                    >
                      Description
                    </th>
                    <th
                      class="px-6 py-4 text-left text-sm font-medium text-gray-700 uppercase tracking-wider"
                    >
                      Prix
                    </th>
                    <th
                      class="px-6 py-4 text-left text-sm font-medium text-gray-700 uppercase tracking-wider"
                    >
                      Quantité
                    </th>
                    <th
                      class="px-6 py-4 text-right text-sm font-medium text-gray-700 uppercase tracking-wider"
                    >
                      Total
                    </th>
                    <th
                      class="px-6 py-4 text-right text-sm font-medium text-gray-700 uppercase tracking-wider"
                    ></th>
                  </tr>
                </thead>
                @if (Model != null && Model.Any())
                {
                <tbody class="divide-y divide-gray-200">

                    @foreach (var item in Model)
                  {
                  <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="flex items-center">
                        <div
                          class="h-16 w-16 flex-shrink-0 rounded-md overflow-hidden bg-gray-100"
                        >
                          <img
                            src="https://readdy.ai/api/search-image?query=modern%20minimalist%20white%20sneakers%20on%20clean%20background%2C%20product%20photography%2C%20high%20quality%2C%20studio%20lighting%2C%20white%20background&width=400&height=400&seq=1&orientation=squarish"
                            alt="Sneakers blanches"
                            class="h-full w-full object-cover object-top"
                          />
                        </div>
                        <div class="ml-4">
                          <div class="text-sm font-medium text-gray-900">
                            @item.Produit?.Nom
                          </div>
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4">
                      <div class="text-sm text-gray-600 max-w-xs">
                        @item.Produit?.Description
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm font-medium text-gray-900">
                        @item.Produit?.Prix €
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div
                        class="flex items-center border border-gray-200 rounded-button w-32"
                      >
                        <button
                          class="w-10 h-10 flex items-center justify-center text-gray-600 hover:text-primary !rounded-button"
                        >
                          <i class="ri-subtract-line"></i>
                        </button>
                        <input
                          type="number"
                          value="1"
                          min="1"
                          class="w-12 h-10 text-center text-gray-700 border-none focus:outline-none focus:ring-0"
                        />
                        <button
                          class="w-10 h-10 flex items-center justify-center text-gray-600 hover:text-primary !rounded-button"
                        >
                          <i class="ri-add-line"></i>
                        </button>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right">
                      <div class="text-sm font-medium text-gray-900">
                        @item.Produit?.Prix €
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right">
                      <button
                        class="w-8 h-8 flex items-center justify-center text-gray-400 hover:text-red-500 !rounded-button"
                      >
                        <i class="ri-delete-bin-line"></i>
                      </button>
                    </td>
                  </tr>
                }

                </tbody>
                }
              </table>
            </div>
          </div>




          <div class="mt-8 grid md:grid-cols-2 gap-8">
            <div
              class="bg-white rounded-lg shadow-sm border border-gray-100 p-6"
            >
              <h2 class="text-lg font-medium text-gray-800 mb-4">Code Promo</h2>
              <div class="flex">
                <input
                  type="text"
                  placeholder="Entrez votre code"
                  class="flex-1 border border-gray-300 rounded-l-button px-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary text-sm"
                />
                <button
                  class="bg-primary text-white px-4 py-2 rounded-r-button hover:bg-primary/90 transition-colors whitespace-nowrap !rounded-button"
                >
                  Appliquer
                </button>
              </div>
            </div>

            <div
              class="bg-white rounded-lg shadow-sm border border-gray-100 p-6"
            >
              <h2 class="text-lg font-medium text-gray-800 mb-4">
                Récapitulatif
              </h2>
              <div class="space-y-3">
                <div class="flex justify-between">
                  <span class="text-gray-600">Sous-total</span>
                  <span class="font-medium">289,97 €</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Livraison</span>
                  <span class="font-medium">Gratuite</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Taxes</span>
                  <span class="font-medium">57,99 €</span>
                </div>
                <div class="border-t border-gray-200 pt-3 mt-3">
                  <div class="flex justify-between font-medium">
                    <span class="text-gray-800">Total</span>
                    <span class="text-xl text-primary">347,96 €</span>
                  </div>
                </div>
              </div>
         <form asp-controller="Commande" asp-action="ValiderCommande" method="post">
            <button
              type="submit"
              class="mt-6 w-full bg-primary text-white py-3 rounded-button hover:bg-primary/90 transition-colors flex items-center justify-center font-medium"
            >
              <i class="ri-secure-payment-line mr-2"></i>
              Procéder au paiement
            </button>
          </form>

            </div>
          </div>

          <div
            class="mt-8 flex flex-col md:flex-row justify-between items-center"
          >
            <a
              href="#"
              class="text-primary hover:text-primary/80 flex items-center mb-4 md:mb-0"
            >
              <i class="ri-arrow-left-line mr-2"></i>
              Continuer mes achats
            </a>
            <div class="flex items-center space-x-2 text-sm text-gray-600">
              <span>Paiement sécurisé</span>
              <div class="flex items-center space-x-2">
                <div
                  class="w-8 h-8 flex items-center justify-center text-gray-600"
                >
                  <i class="ri-visa-fill ri-lg"></i>
                </div>
                <div
                  class="w-8 h-8 flex items-center justify-center text-gray-600"
                >
                  <i class="ri-mastercard-fill ri-lg"></i>
                </div>
                <div
                  class="w-8 h-8 flex items-center justify-center text-gray-600"
                >
                  <i class="ri-paypal-fill ri-lg"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
