@model ecommerce.Models.Domain.Produit

@{
    ViewData["Title"] = "Confirmer la suppression";
}

<h2>Confirmer la suppression</h2>

<div class="alert alert-danger">
    <p>Es-tu sûr de vouloir supprimer ce produit ?</p>
</div>

<div>
    <h4>@Model.Nom</h4>
    <p><strong>Description :</strong> @Model.Description</p>
    <p><strong>Prix :</strong> @Model.Prix €</p>
    <p><strong>Stock :</strong> @Model.Stock</p>
    <p><strong>Catégorie :</strong> @Model.Categorie?.Nom</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
